<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.alexa.pressupcounter.settings.viewmodel.SettingsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightBlack">

        <Button
            android:id="@+id/go_to_set_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_bell"
            android:onClick="@{() -> viewModel.onSetNotificationsClick()}"
            android:text="настроить уведомления"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/delete_last_program"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/ic_delete_last"
            android:text="Удалить последнюю программу"
            android:onClick="@{() -> viewModel.onClickDeleteLastProgram()}"
            app:layout_constraintEnd_toEndOf="@id/go_to_set_notifications"
            app:layout_constraintStart_toStartOf="@id/go_to_set_notifications"
            app:layout_constraintTop_toBottomOf="@id/go_to_set_notifications" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/ic_delete"
            android:text="сбросить настройки"
            app:layout_constraintEnd_toEndOf="@id/go_to_set_notifications"
            app:layout_constraintStart_toStartOf="@id/go_to_set_notifications"
            app:layout_constraintTop_toBottomOf="@id/delete_last_program" />

        <ImageView
            android:id="@+id/settings_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_settings_logo"
            app:layout_constraintBottom_toTopOf="@id/go_to_set_notifications"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>