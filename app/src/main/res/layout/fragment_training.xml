<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.alexa.pressupcounter.training.viewmodel.TrainingViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/repetition_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подход: "
            android:textSize="30sp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/first_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="40sp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@id/repetition_header"
            app:layout_constraintStart_toEndOf="@id/repetition_header"
            app:layout_constraintBottom_toBottomOf="@id/repetition_header"/>

        <TextView
            android:id="@+id/second_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/first_repetition"
            app:layout_constraintBottom_toBottomOf="@id/first_repetition"/>

        <TextView
            android:id="@+id/third_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/second_repetition"
            app:layout_constraintBottom_toBottomOf="@id/second_repetition"/>

        <TextView
            android:id="@+id/fourth_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/third_repetition"
            app:layout_constraintBottom_toBottomOf="@id/third_repetition"/>

        <TextView
            android:id="@+id/fifth_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/fourth_repetition"
            app:layout_constraintBottom_toBottomOf="@id/fourth_repetition"/>

    </android.support.constraint.ConstraintLayout>
</layout>