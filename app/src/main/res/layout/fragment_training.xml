<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.alexa.pressupcounter.training.viewmodel.TrainingViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/repetition_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="@string/for_repetition_header"
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/first_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/for_first_repetition"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/repetition_header"
            app:layout_constraintStart_toEndOf="@id/repetition_header"
            app:layout_constraintTop_toTopOf="@id/repetition_header"
            app:setCurrent="@{viewModel.repetition == 1 ? true : false}" />

        <TextView
            android:id="@+id/second_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/for_second_repetition"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/repetition_header"
            app:layout_constraintStart_toEndOf="@id/first_repetition"
            app:layout_constraintTop_toTopOf="@id/repetition_header"
            app:setCurrent="@{viewModel.repetition == 2 ? true : false}" />

        <TextView
            android:id="@+id/third_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/for_third_repetition"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/repetition_header"
            app:layout_constraintStart_toEndOf="@id/second_repetition"
            app:layout_constraintTop_toTopOf="@id/repetition_header"
            app:setCurrent="@{viewModel.repetition == 3 ? true : false}" />

        <TextView
            android:id="@+id/fourth_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/for_fourth_repetition"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/repetition_header"
            app:layout_constraintStart_toEndOf="@id/third_repetition"
            app:layout_constraintTop_toTopOf="@id/repetition_header"
            app:setCurrent="@{viewModel.repetition == 4 ? true : false}" />

        <TextView
            android:id="@+id/fifth_repetition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/for_fifth_repetition"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@id/repetition_header"
            app:layout_constraintStart_toEndOf="@id/fourth_repetition"
            app:layout_constraintTop_toTopOf="@id/repetition_header"
            app:setCurrent="@{viewModel.repetition == 5 ? true : false}" />

        <TextView
            android:id="@+id/header_quantity_current_repition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/for_header_quantity_current_repition"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/repetition_header" />

        <TextView
            android:id="@+id/quantity_current_repition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(safeUnbox(viewModel.quantityOfRepetition))}"
            android:textColor="@color/colorBlack"
            android:textSize="80sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_quantity_current_repition"
            tools:text="33" />

        <TextView
            android:id="@+id/header_for_time_of_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_header_for_time_of_rest"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/quantity_current_repition"
            app:layout_constraintStart_toStartOf="@id/quantity_current_repition"
            app:layout_constraintTop_toBottomOf="@id/quantity_current_repition" />

        <TextView
            android:id="@+id/time_of_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{viewModel.restTime}"
            android:textColor="@color/colorBlack"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@id/quantity_current_repition"
            app:layout_constraintStart_toStartOf="@id/quantity_current_repition"
            app:layout_constraintTop_toBottomOf="@id/header_for_time_of_rest" />

        <Button
            android:id="@+id/start_rest_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:setButtonState="@{viewModel.stateOfRestButton ? true : false}"
            android:onClick="@{() -> viewModel.onClickRestButton()}"
            android:text="@string/for_start_rest_button"
            app:layout_constraintBottom_toTopOf="@id/go_to_next_repetition_button"
            app:layout_constraintEnd_toEndOf="@id/go_to_next_repetition_button"
            app:layout_constraintStart_toStartOf="@id/go_to_next_repetition_button" />

        <Button
            android:id="@+id/go_to_next_repetition_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="@{() -> viewModel.onClickNextRepetitionButton()}"
            android:text="@string/for_go_to_next_repetition_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>